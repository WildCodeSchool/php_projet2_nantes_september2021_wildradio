
<form method="post" action="{{action}}" enctype="multipart/form-data">

<div> 
	<label for="name"></label>
	<input type="text" placeholder="name" value="{{ playlist.name }}" name="name" >
		{% if errors.name is defined %}
        	{{ errors.name }}
		{% endif %}	
</div> 

<div>
        <label for="description"></label>
        <textarea id="description" placeholder="Description" value="{{ playlist.description }}" name="description" ></textarea>
		{% if errors.description is defined %}
        	{{ errors.description }}
		{% endif %}	
</div> 

<div>
		<input type="file" name="img" id="img" >
		{% if errors.jpg is defined %}
        	{{ errors.jpg }}
		{% endif %}
</div>

<div>
  <input type="checkbox" id="is_online" name="is_online"
         {% if playlist.is_online == 1 %}  checked {% endif %}>
  <label for="online"> En ligne </label>
</div>

<div>
  <input type="text" id="tag" name="tag" placeholder="tag">
  <label for="tag"></label>
</div>

<div>
	<button class="buttons"type="submit" value="Submit"> {{button}} </button>
</div>
 
<div> {{messageEnvoi}}</div>

</form>
