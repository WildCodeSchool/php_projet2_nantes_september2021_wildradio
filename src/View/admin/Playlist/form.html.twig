
<form method="post" action="{{action}}" enctype="multipart/form-data">
<input type="hidden" value="{{ track.id }}" name="id">

<input type="hidden" value="{{ playlist.id }}" name="id">

<div> 
	<label for="name"></label>
	<input type="text" placeholder="name" value="{{ playlist.name }}" name="name" >
		{% if errors.name is defined %}
        	{{ errors.name }}
		{% endif %}	
</div> 

<div>
        <label for="description"></label>

        <input id="input-description" type="text" placeholder="ajouter description" value="{{ playlist.description }}" name="description" ></input>

		{% if errors.description is defined %}
        	{{ errors.description }}
		{% endif %}	
</div> 

<div>
		<input type="file" name="img" id="img" >
		{% if errors.jpg is defined %}
        	{{ errors.jpg }}
		{% endif %}
</div>

<div>
  <input type="checkbox" id="is_online" name="is_online"
         {% if playlist.is_online == 1 %}  checked {% endif %}>
  <label for="online"> En ligne </label>
</div>

<div>

  <input type="text" id="tag" name="tag" value="{{ playlist.tag }}" placeholder="tag">
  <label for="tag"></label>
</div>

<div>

		<button id="btn-submit" type="submit" value="Submit"> {{button}} </button>
</div>
 
		<div id="messageEnvoi">  {{messageEnvoi}} </div>


</form>

