{% extends '/admin/layout.html.twig' %}

{% block content %}

    <div id="contenu-admin-track-add">

        {% block header %}{% include "admin/header.html.twig" %}{% endblock %}

        <h1>Informations de la playlist</h1>

            <div id="contenu-admin-tracks">


    <div id="input-form"> Titre de la playlist : {{ playlist.name }}</div>
    <div id="input-form"> Description : {{ playlist.description }}</div><br> 
    
    <div> <img id="imgPlaylist" src="{{playlist.img}}"> </img></div> <br>

        <br/>

    <a class="buttons" href="/admin/playlists/edit?id={{ playlist.id }}">Modifier la Playlist</a>

        <br/>

    <form action="/admin/playlists/delete" method="POST">
        <input type="hidden" name="id" value="{{ playlist.id }}">
                    <br/>

        <button class="buttons">Effacer</button>
    </form>
                <br/>

    <a class="buttons" href="/admin/playlists">Retour</a>

    {% include 'admin/Track/addplaylist.html.twig' %}

     <div id="track-edit-right">
                <h2>Liste des tracks dans cette playlist</h2>
                
     <ol id="playlist"> {% for track in tracksInPlaylist %}
          <ul> <a href="{{track.mp3}}">
          <strong>{{track.title}}  </strong>- {{track.artist}} </br>
          {{track.album}} </a></ul>
        {% endfor %}
    </ol>


{% endblock %}                