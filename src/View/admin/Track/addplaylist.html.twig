<form method="POST" action="/admin/tracks/playlistAdd">
	<table id="tableAddPlaylist">
		<tr>
			<th> </th>
			<th> </th>
			<th> </th>
		</tr>
			
		{% for playlist in playlists %}

			<tr>
				<td> {{ playlist.name }} </td>

				<td>
					<input type="hidden" value="{{ track.id }}" name="id">

					<label for="addPlaylist-{{ playlist.id }}"></label>
					<input type="checkbox"  name="addPlaylist[]"  id="addPlaylist-{{ playlist.id }}" value="{{ playlist.id }}" {% if playlist.id in selectedPlaylists %} checked {% endif %}>
			
				</td>

			</tr>
			
		{% endfor %}

	</table>

	<button id="btn-submit" type="submit" value="submit">Valider</button>

</form>