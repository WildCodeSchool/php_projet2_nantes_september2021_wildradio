<form method="POST" action="{{action}}" enctype="multipart/form-data">

	<input type="hidden" value="{{ track.id }}" name="id">

	<div> 
		<label for="title"></label>
		<input type="text" placeholder="Titre" value="{{ track.name }}" name="title" >
		{% if errors.name is defined %}
        	{{ errors.name }}
		{% endif %}
	
	</div> 

	<div> 
		<input type="text" placeholder="Artiste" value="{{ track.artist }}" name="artist" >
		{% if errors.artist is defined %}
        	{{ errors.artist }}
		{% endif %}
	</div>

	<div>
		<input type="text" placeholder="Album" value="{{ track.album }}" name="album" >
		{% if errors.album is defined %}
        	{{ errors.album }}
		{% endif %}
	</div>
	</div>
		<input type="file" name="mp3" id="mp3" >
		{% if errors.mp3 is defined %}
        	{{ errors.mp3 }}
		{% endif %}
	</div>
	</div>

	<div>
		<button type="submit" value="Submit"> Ajouter une track </button>
	</div>

</form> 
 