{% extends '/admin/layout.html.twig' %}


{% block title %}Se connecter{% endblock %}

{% block content %}

    <h1>Se connecter</h1>
    

	<form method="POST" action="{{action}}">

		<input type="hidden" value="{{ track.id }}" name="id">

		<div> 
			<label for="username"></label>
			<input type="text" placeholder="Username" value="{{ log.username }}" name="username" >
			{% if errors.username is defined %}
				{{ errors.username }}
			{% endif %}
		
		</div> 

		<div> 
			<input type="password" placeholder="Password" value="{{ log.password }}" name="password" >
			{% if errors.password is defined %}
				{{ errors.password }}
			{% endif %}
		</div>

		
		<div>
			<button type="submit" value="Submit"> Se connecter</button>
		</div>
{% endblock %}

 