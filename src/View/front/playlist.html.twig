{% extends '/front/layout.html.twig' %}

{% block title %}Playlist - {{playlist.name}} {% endblock %}

  {% block content %}
  {% block header %}{% include "front/header.html.twig" %}
  {% endblock %}
 

<div id="contenu-contact">

{# PAGE DE GAUCHE #}

        <div id="playlist-left"> 

            <div id="contenu-playlist-left">
              
                <audio controls id="audioPlayer"></audio>
                    <span id="player">
                        <i id="play" class="fa fa-play"></i>
                    </span>

                      <img id="image-playlist" src="{{playlist.img}}"> 
                      </img>

                          <h1> {{playlist.name}} </h1>
                          <p> {{playlist.description}}</p> 

            </div>

        </div>

{# PAGE DE DROITE #}

            <div id="playlist-right">

                <div id="contenu-playlist-right">

                        <ol id="playlist"> {% for track in tracksInPlaylist %}
                          <ul> <a href="{{track.mp3}}">
                          <span id="player-track-artist">{{track.artist}}</span> - {{track.title}} </br>
                          <span id="player-track-album">{{track.album}}</span> </a></ul>
                        {% endfor %}
                        </ol>
                        
                </div>

            </div> 
            
</div>


  {% block javascript %} 
    <script src="/assets/js/playerPlaylist.js"></script>
      <script>
       audioPlayer();
      </script>
  {% endblock %}

{% endblock %}